<script>


    const network = document.getElementById("network");
    const arrow = document.querySelector(".arow");
    const listNetwork = document.querySelector(".network_list");

    network.addEventListener("click", () => {
        listNetwork.classList.toggle("hide");
        arrow.style.transform = listNetwork.classList.contains("hide")
            ? "rotate(180deg)"
            : "rotate(360deg)";
    });


    document.querySelectorAll(".network-img").forEach((value, index, array) => {
        value.addEventListener('click', () => {
            const src = value.querySelector("img").src
            // console.log(src)
            const view_netword = document.querySelector(".view_netword").querySelector('img').src = src
            const list_neword = document.querySelector(".network_list").classList.toggle('hide')
            arrow.style.transform = listNetwork.classList.contains("hide")
                ? "rotate(180deg)"
                : "rotate(360deg)";
        })
    })

    document.getElementById("phone").addEventListener("change", () => {
        const phoneInput = document.getElementById("phone");
        const phoneError = document.getElementById("phone-error");
        const check = validatePhoneNumber();
        console.log(check)
        if (check === false) {
            phoneError.style.display = "block";
            phoneInput.classList.add("error");
            return false
        } else {
            phoneError.style.display = "none";
            phoneInput.classList.remove("error");
            console.log("Phone number is valid:", phoneInput.value);
        }
    });


    function validatePhoneNumber() {
        const phoneInput = document.getElementById("phone");
        const phoneError = document.getElementById("phone-error");
        const phoneRegex = /^0[1-9]\d{8}$/;
        return phoneRegex.test(phoneInput.value)
    }

    const defaultCheckbox = document.querySelector(".denomination-option input[value='20000']");
    const amountDisplay = document.getElementById("amount");
    const totalAmountDisplay = document.getElementById("total-amount");

    if (defaultCheckbox) {

        defaultCheckbox.checked = true;
        defaultCheckbox.parentElement.classList.add("selected");


        const formattedValue = parseInt(defaultCheckbox.value).toLocaleString("vi-VN") + " VND";
        amountDisplay.value = formattedValue;
        totalAmountDisplay.textContent = formattedValue;
    }

    const denominationOptions = document.querySelectorAll(".denomination-option");
    denominationOptions.forEach(option => {
        option.addEventListener("click", function () {

            denominationOptions.forEach(opt => {
                const checkbox = opt.querySelector("input[type='checkbox']");
                checkbox.checked = false;
                opt.classList.remove("selected");
            });


            const checkbox = this.querySelector("input[type='checkbox']");
            checkbox.checked = true;
            this.classList.add("selected");

            // Update amount and total display
            const value = checkbox.value;
            const formattedValue = parseInt(value).toLocaleString("vi-VN") + " VND";
            amountDisplay.value = formattedValue;
            totalAmountDisplay.textContent = formattedValue;
        });
    });
    function check() {
        const phoneInput = document.getElementById("phone");
        const phoneError = document.getElementById("phone-error");
        const check = validatePhoneNumber();
        console.log(check)
        if (check === false) {
            phoneError.style.display = "block";
            phoneInput.classList.add("error");
            return false
        } else {
            phoneError.style.display = "none";
            phoneInput.classList.remove("error");
            console.log("Phone number is valid:", phoneInput.value);
        }

        const selectedDenomination = document.querySelector('.denomination-option.selected input[type="checkbox"]');


        alert(`Phone: ${phone.value} \n Gia: ${selectedDenomination.value}`);
    }


</script>

